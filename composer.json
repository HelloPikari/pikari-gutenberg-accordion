{
	"name": "pikari-inc/pikari-gutenberg-accordion",
	"description": "A Wordpress Gutenberg Accordion/Toggle block",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Pikari Inc.",
			"email": "development@pikari.io"
		}
	],
	"homepage": "https://pikari.io",
	"require": {
		"php": ">=8.3",
		"composer/installers": "^2.0"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.10",
		"wp-coding-standards/wpcs": "^3.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcsstandards/phpcsutils": "^1.0.12",
		"phpunit/phpunit": "^9.5",
		"php-stubs/wordpress-stubs": "^6.8"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/installers": true
		}
	},
	"scripts": {
		"lint": "phpcs",
		"lint:fix": "phpcbf",
		"lint:file": "phpcs --standard=phpcs.xml",
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html tests/coverage"
	},
	"extra": {
		"installer-name": "pikari-gutenberg-accordion"
	}
}
