{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"preferredVersions": {
		"php": "8.3",
		"wp": "latest"
	},
	"landingPage": "/wp-admin/post-new.php?post_type=page",
	"login": true,
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "Pikari Gutenberg Accordion - Local Development",
				"blogdescription": "Testing Accessible WordPress Accordion Block"
			}
		},
		{
			"step": "installTheme",
			"themeZipFile": {
				"resource": "wordpress.org/themes",
				"slug": "twentytwentyfour"
			}
		},
		{
			"step": "activatePlugin",
			"pluginPath": "pikari-gutenberg-accordion/pikari-gutenberg-accordion.php"
		}
	]
}
