{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"preferredVersions": {
		"php": "8.3",
		"wp": "latest"
	},
	"landingPage": "/",
	"login": false,
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "Pikari Gutenberg Accordion Demo",
				"blogdescription": "Accessible WordPress Accordion Block"
			}
		},
		{
			"step": "installPlugin",
			"pluginData": {
				"resource": "url",
				"url": "https://github-proxy.com/proxy/?repo=pikari/pikari-gutenberg-accordion&branch=build"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "installTheme",
			"themeData": {
				"resource": "wordpress.org/themes",
				"slug": "twentytwentyfour"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "importWxr",
			"file": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/pikari/pikari-gutenberg-accordion/main/_playground/demo-content.xml"
			}
		},
		{
			"step": "setSiteOptions",
			"options": {
				"show_on_front": "page",
				"page_on_front": 2
			}
		}
	]
}
